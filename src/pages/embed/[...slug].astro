---
import { getCollection, getEntryBySlug } from 'astro:content';

// 1. Liste aller Seiten generieren
export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map((entry) => ({
    params: { slug: entry.slug.split('/') },
  }));
}

// 2. Einzelnen Eintrag anhand des Slugs laden
const { slug } = Astro.params;
const fullSlug = Array.isArray(slug) ? slug.join('/') : slug;

const entry = await getEntryBySlug('docs', fullSlug);

if (!entry) {
  throw new Error(`Inhalt nicht gefunden f√ºr ${fullSlug}`);
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{entry.data.title}</title>
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 1rem;
        max-width: 100%;
        background: white;
        color: black;
      }
      img {
        max-width: 100%;
      }
      a {
        color: #0b62d6;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <main>
      <entry.Content />
    </main>
  </body>
</html>
